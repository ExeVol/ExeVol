<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SurveyCreatePage"
    android:id="@+id/drawerLayout"
    android:background="@color/light_grey">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_grey"
        android:orientation="vertical">
        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/create_survey_header" />

        <ImageView
            android:layout_width="400dp"
            android:layout_height="167dp"
            android:layout_gravity="center"
            android:src="@drawable/tv_survey" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:gravity="right">


        <EditText
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/secular_one"
            android:hint="הכנס נושא"
            android:textColorHint="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="17dp"
            android:id="@+id/enter_article"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="הכנס נושא:"
            android:fontFamily="@font/secular_one"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_gravity="right"
            android:paddingTop="20dp"
            android:layout_marginRight="20dp"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:gravity="right">
            <EditText
                android:id="@+id/enter_explain"
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/secular_one"
                android:gravity="center"
                android:hint="הכנס הסבר"
                android:textColorHint="@color/white"
                android:layout_marginRight="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:fontFamily="@font/secular_one"
                android:text="הכנס הסבר:"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:paddingTop="20dp"
                android:layout_marginRight="20dp"
                />
        </LinearLayout>
        <ImageButton
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/add_survey"
            android:id="@+id/create_survey_bt"
            />

        <Button
            android:id="@+id/back_to1"
            android:layout_width="173dp"
            android:layout_height="67dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/light_brown"
            android:fontFamily="@font/secular_one"
            android:hint="חזור"
            android:textColorHint="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />


    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layoutDirection="rtl"
        android:gravity="right" />
</androidx.drawerlayout.widget.DrawerLayout>